<link rel="stylesheet" type="text/css" href="style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


<% include header.ejs %>
<% include home.ejs %>


        <% if(typeof(data) === 'string'){ %>

            <div class="ui main raised very padded text container segment">
                <h3 class="ui center aligned header">
                    <%= data %>
                </h3>
            </div>
        <% } else { %>
            <div class="container">
                    <div class="row ">
                        <div class="col-sm">
                            <div class="card">
                                    <div class="card-header">
                                    Address
                                    </div>
                                    <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                            <p><%= data['address'] %></p>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                                <div class="card">
                                        <div class="card-header">
                                         Temperature
                                        </div>
                                        <div class="card-body">
                                        <blockquote class="blockquote mb-0">
                                            <p><%= Math.round((5/9) * (data['temp']-32)) %>°C</p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>
            <div class="container">
                    <div class="row ">
                        <div class="col-sm">
                            <div class="card">
                                    <div class="card-header">
                                            Hourly Summary
                                    </div>
                                    <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                            <p><%= data['hourlySummary'] %></p>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                                <div class="card">
                                        <div class="card-header">
                                            Summary
                                        </div>
                                        <div class="card-body">
                                        <blockquote class="blockquote mb-0">
                                                <p><%= data['summary'] %></p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>
            <div class="container">
                    <div class="row ">
                        <div class="col-sm">
                            <div class="card">
                                    <div class="card-header">
                                            Apparent Temperature
                                    </div>
                                    <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                            <p><%= Math.round((5/9) * (data['apparentTemperature']-32)) %>°C</p>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                                <div class="card">
                                        <div class="card-header">
                                                Time
                                        </div>
                                        <div class="card-body">
                                        <blockquote class="blockquote mb-0">
                                                <p><%= new Date(data['time'] * 1000) %></p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>
           
            <div class="container">
                    <div class="row ">
                        <div class="col-sm">
                            <div class="card">
                                    <div class="card-header">
                                            Latitude
                                    </div>
                                    <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                            <p><%= data['latitude'] %></p>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm">
                                <div class="card">
                                        <div class="card-header">
                                                Longitude
                                        </div>
                                        <div class="card-body">
                                        <blockquote class="blockquote mb-0">
                                                <p><%= data['longitude'] %></p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>
            <div class="container">
                    <div class="row ">
                            <div class="col-sm">
                                    <div class="card">
                                            <div class="card-header">
                                                    Humidity
                                            </div>
                                            <div class="card-body">
                                            <blockquote class="blockquote mb-0">
                                                    <p><%= data['humidity'] %></p>
                                            </blockquote>
                                        </div>
                                    </div>
                                </div>
                        <div class="col-sm">
                                <div class="card">
                                        <div class="card-header">
                                                Pressure
                                        </div>
                                        <div class="card-body">
                                        <blockquote class="blockquote mb-0">
                                                <p><%= data['pressure'] %></p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>
            <div class="container">
                    <div class="row ">
                            <div class="col-sm">
                                    <div class="card">
                                            <div class="card-header">
                                                    Wind Speed
                                            </div>
                                            <div class="card-body">
                                            <blockquote class="blockquote mb-0">
                                                    <p><%= data['windSpeed'] %></p>
                                            </blockquote>
                                        </div>
                                    </div>
                                </div>
                        <div class="col-sm">
                                <div class="card">
                                        <div class="card-header">
                                                Ozone
                                        </div>
                                        <div class="card-body">
                                        <blockquote class="blockquote mb-0">
                                                <p><%= data['ozone'] %></p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>
        
        </div>
        <% } %>


        

<% include footer.ejs %>